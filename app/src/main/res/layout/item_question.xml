<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_question_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/questionRank"
        style="@style/Question.Rank"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        tools:text="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTitle"
            style="@style/Question.Title"
            tools:text="Question title"/>

        <TextView
            android:id="@+id/questionTags"
            style="@style/Question.Tag"
            android:layout_marginTop="12dp"
            tools:text="kotlin, android, java, rxjava, retrofit, dagger2"/>

        <TextView
            android:id="@+id/questionOwner"
            style="@style/Question.Author"
            android:layout_marginTop="8dp"
            tools:text="created by Mateusz Nawrot"/>

    </LinearLayout>

</LinearLayout>